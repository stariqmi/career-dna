      .flex-form-field
        p.is-size-5.has-text-white Were you a transfer student?
        .field
          .control
            .select
              select
                option(value='1') Yes
                option(value='0') No
      .flex-form-field
        p.is-size-5.has-text-white Did you take a gap year?
        .field
          .control
            .select
              select
                option(value='1') Yes
                option(value='0') No
